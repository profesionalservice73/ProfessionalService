{
  "expo": {
    "name": "Professional Service",
    "slug": "ProfessionalService",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Esta aplicación necesita acceso a tu ubicación para mostrar servicios cercanos y calcular distancias.",
        "NSPhotoLibraryUsageDescription": "Esta app necesita acceso a tu galería para seleccionar fotos del problema.",
        "NSCameraUsageDescription": "Esta app necesita acceso a tu cámara para tomar fotos del problema."
      },
      "config": {
        "googleMapsApiKey": "AIzaSyCMC6Hjca0wTD8tm9fc9X30bthRaOmTUog"
      },
      "bundleIdentifier": "com.professionalservice.app"
    },
    "android": {
      "package": "com.professionalservice.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "INTERNET",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyCMC6Hjca0wTD8tm9fc9X30bthRaOmTUog"
        }
      }
    },
    "web": {
      "favicon": "./assets/icon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Esta aplicación necesita acceso a tu ubicación para mostrar servicios cercanos y calcular distancias."
        }
      ],
      [
        "expo-maps",
        {
          "requestLocationPermission": true,
          "locationPermission": "Allow $(PRODUCT_NAME) to use your location",
          "apiKey": {
            "googleMaps": "AIzaSyCMC6Hjca0wTD8tm9fc9X30bthRaOmTUog"
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#ffffff",
          "defaultChannel": "default"
        }
      ],
      "expo-asset",
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "41d57e39-a695-4835-8d13-70bfc7342b43"
      }
    }
  }
}
